extends page

block content
  .main-content
    .info-block.media
      .centered.container
        h2 I'm looking for...
        .btn-group.centered(role='group', aria-label='Basic example')
          button#posts.btn.btn-secondary(type='button', data-toggle='tab', href='#home', onclick="toggleSelection('posts')") ... a post
          button#links.btn.btn-secondary(type='button', data-toggle='tab', href='#menu2', onclick="toggleSelection('links')") ... a link
          button#classes.btn.btn-secondary(type='button', data-toggle='tab', href='#menu3', onclick="toggleSelection('classes')") ... a class
          button#users.btn.btn-secondary(type='button', data-toggle='tab', href='#menu4', onclick="toggleSelection('users')") ... a user
          button#all.btn.btn-secondary(type='button', data-toggle='tab', href='#menu5', onclick="toggleSelection('all')") Everything!
        br
        br
        h2 Which has...
        .tab-content
          #home.tab-pane.fade
            label(for='postTags')
              | Tags:
              input#postTags(type='text')
            br
            label(for='postKeywords')
              | Keywords:
              input#postKeywords(type='text')
            br
            label(for='exact-words')
              | Exact Words:
              input#exact-words(type='text')
            br
            label(for='postTitle')
              | Title:
              input#postTitle(type='text')
            br
            button#question-button.btn.btn-sm.button(type='button', onclick='sendQuery()') Search!
          #menu2.tab-pane.fade
            label(for='linkTags')
              | Tags:
              input#linkTags(type='text')
            br
            label(for='linkTitle')
              | Title:
              input#linkTitle(type='text')
            br
            label(for='link')
              | Link:
              input#link(type='text')
            br
            button#link-button.btn.btn-sm.button(type='button', onclick='sendQuery()') Search!
          #menu3.tab-pane.fade
            label(for='classTags')
              | Tags:
              input#classTags(type='text')
            br
            label(for='classTitle')
              | Title:
              input#classTitle(type='text')
            br
            label(for='courseCode')
              | Course Code:
              input#courseCode(type='text')
            br
            button#class-button.btn.btn-sm.button(type='button', onclick='sendQuery()') Search!
          #menu4.tab-pane.fade
            label(for='user')
              | Username:
              input#user(type='text')
            br
            button#user-button.btn.btn-sm.button(type='button', onclick='sendQuery()') Search!
          #menu5.tab-pane.fade
            label(for='title')
              | Title:
              input#title(type='text')
            br
            button#all-button.btn.btn-sm.button(type='button', onclick='sendQuery()') Search!
    link(href='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css', rel='stylesheet')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js')
